<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">  <!-- Background putih untuk tampilan bersih -->

    <!-- Waktu Penjemputan -->
    <TextView
        android:id="@+id/textViewWaktuPenjemputan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Penjemputan: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:gravity="center" />  <!-- Gravity center agar teks berada di tengah -->

    <!-- Nomor Antrian -->
    <TextView
        android:id="@+id/textViewNomorAntrian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Antrian: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Sisa Waktu -->
    <TextView
        android:id="@+id/textViewSisaWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sisa Waktu: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Tombol untuk set alarm -->
    <Button
        android:id="@+id/buttonSetAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" /><!-- Ganti dengan warna yang sesuai di colors.xml -->

</LinearLayout>
